<WeatherData>:
    hue: random()
    canvas:
        Color:
            hsv: self.hue, .5, .3
        Rectangle:
            size: self.size

    BoxLayout:
        size_hint: .5, None
        height: 250
        pos_hint: {'center_x': .5, 'top':1}
        orientation: 'vertical'

        GridLayout:
            cols:2
            Label:
                text: 'Temperature'
            Button:
                id: temp1
                text: ''


            Label:
                text: 'Humidity'
            Button:
                id: humidity
                text: ''


            Label:
                text: 'Dewpoint'
            Button:
                id: dewpoint
                text: ''


            Label:
                text: 'Pressure'
            Button:
                id: pressure
                text: ''


            Label:
                text: 'Light'
            Button:
                id: light
                text: ''


            Label:
                text: 'Wind Speed'
            Button:
                id: wind_speed
                text: ''


            Label:
                text: 'Wind Direction'
            Button:
                id: wind_direction
                text: ''


            Label:
                text: 'Rainfall'
            Button:
                id: rainfall
                text: ''


            Label:
                text: 'Date'
            Button:
                id: date
                text: ''

            Label:
                text: 'Time'
            Button:
                id: time
                text: ''


        

        